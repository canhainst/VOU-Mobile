<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color or shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f3f3f3" />

            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="30dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="20dp" /> <!-- Adjust padding for shadow effect -->
            <stroke android:width="1dp" android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="0dp"
                android:bottom="10dp" /> <!-- Adjust padding for shadow effect -->
            <corners android:radius="30dp" />
            <gradient
                android:startColor="#37000000"
                android:endColor="#03000000"
                android:angle="90" /> <!-- Gradient for shadow effect -->
        </shape>
    </item>
</layer-list>
